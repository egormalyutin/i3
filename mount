#/bin/bash

alias mkdir="echo 'egorka&gorka' | sudo -S mkdir"
alias mount="echo 'egorla&gorka' | sudo -S mount"

cd /dev/

for device in sd*
	do
		if [[ $(ls -l /dev/disk/by-uuid/ | grep $device | grep 7CE2-470C) ]]
		then
        		sudo mkdir /mnt/flash
        		sudo mount $device /mnt/flash
        		echo "Mounted $device to /mnt/flash."
		fi

done
