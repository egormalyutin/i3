# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Remote cmus

bindsym $mod+Shift+c mode "cmus"

mode "cmus" {
        
	# remote keys
	
	bindsym Right	exec cmus-remote -n
	bindsym n	exec cmus-remote -n

	bindsym Left	exec cmus-remote -r
	bindsym u	exec cmus-remote -r

	bindsym space	exec cmus-remote -u
	bindsym p	exec cmus-remote -u

	bindsym Up	exec pactl set-sink-volume 0 +2% 

	bindsym Down	exec pactl set-sink-volume 0 -2%

	bindsym r	exec cmus-remote -C "toggle repeat_current"

	bindsym a	exec cmus-remote -C "seek -5"
	bindsym h	exec cmus-remote -C "seek -5"

	bindsym d	exec cmus-remote -C "seek +5"
	bindsym l	exec cmus-remote -C "seek +5"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
#                 RRGGBBAA
set $transparent #00000000

bar {
	status_command i3blocks -c $c/blocks
	i3bar_command i3bar -t
	font pango: Iosevka Term, Font Awesome 8
	position bottom
	colors {
		background $transparent
		statusline #ffffff
		separator #666666

		focused_workspace  $transparent #transparent #ffffff
		active_workspace   $transparent $transparent #ffffff
		inactive_workspace $transparent $transparent #888888
		urgent_workspace   $transparent #ff000050    #ffffff
	}

    
}

