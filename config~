client.focused          $transparent #000000      #ffffff $transparent   $transparent
client.focused_inactive $transparent $transparent #666666 $transparent   $transparent
client.unfocused        $transparent $transparent #666666 $transparent   $transparent
client.urgent           $transparent $transparent #666666 $transparent   $transparent
client.background       $transparent

# Volume

bindsym XF86AudioRaiseVolume exec ~/.config/i3/plus-volume 5

bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5% 

bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle

bindsym XF86AudioMicMute exec pactl set-source-mute alsa_input.pci-0000_00_1b.0.analog-stereo to$



# Brightness

bindsym XF86MonBrightnessUp exec xbacklight -inc 6
bindsym XF86MonBrightnessDown exec xbacklight -dec 6


# Wallpapers and effects
exec compton -f --vsync drm
exec feh --bg-scale $wallpaper &

# Key bind for fix wallpapers on another monitors
# WARNING: It's only for my monitor!
bindsym $mod+Shift+m exec xrandr --output eDP1 --mode 1366x768 --pos 0x0 --output DP1 --mode 1024x768 --pos 1366x0 && feh --bg-scale $wallpaper &

# Show/Hide names

bindsym $mod+T border toggle

# Set default gaps

gaps inner $innerGaps
gaps outer $outerGaps

# Set keys to change gaps

bindsym $mod+o        gaps outer current plus  10
bindsym $mod+Shift+o  gaps outer current minus 10

bindsym $mod+i        gaps inner current plus  10
bindsym $mod+Shift+i  gaps inner current minus 10

# Set keys to move windows 

bindsym $mod+Shift+h    move left 10
bindsym $mod+Shift+j    move down 10
bindsym $mod+Shift+k    move up 10
bindsym $mod+Shift+l    move right 10

# Set gaps to default

bindsym $mod+Shift+g  gaps inner all set $innerGaps; gaps outer all set $outerGaps

# Toggle Unified Remote Server daemon
bindsym $mod+u exec ~/.config/i3/ur/cli/toggle

# Toggle split
bindsym $mod+Shift+t split toggle

# Rename this workspace by $c/i3-symb and $c/tab-name.js
bindsym $mod+Shift+n exec $c/i3-symb
